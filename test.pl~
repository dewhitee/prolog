parent(luke, darth_vader).
parent(luke, padme).
parent(leia, darth_vader).
parent(leia, padme).
parent(darth_vader, shmi).

male(dart_vader).
male(luke).

female(shmi).
female(padme).
female(leia).


mother(Child, Parent) :-
    parent(Child, Parent),
    female(Parent).
father(Child, Parent) :-
    parent(Child, Parent),
    male(Parent).

grandmother(Child, Grandparent) :-
    parent(Child, Parent),
    mother(Parent, Grandparent).
grandfather(Child, Grandparent) :-
    parent(Child, Parent),
    father(Parent, Grandparent).


